<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="368dp">
        <TextView android:textSize="60sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/textViewPause" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="PAUSE"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="145dp">
        <Button android:textSize="24sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/buttonYourTurn" android:background="@android:color/holo_green_light" android:layout_width="153dp" android:layout_height="59dp" android:text="RESUME" android:onClick="ResumeButton"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
